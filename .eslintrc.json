{
  "plugins": ["no-relative-import-paths", "@typescript-eslint/eslint-plugin"],
  "extends": [
    "next/core-web-vitals",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "prettier"
  ],
  "rules": {
    "no-relative-import-paths/no-relative-import-paths": [
      "error",
      {
        "allowSameFolder": false,
        "rootDir": "",
        "prefix": "@"
      }
    ],
    "@typescript-eslint/consistent-type-imports": [
      "error",
      {
        "prefer": "type-imports",
        "disallowTypeAnnotations": false
      }
    ],
    "import/order": [
      "error",
      {
        "groups": [["builtin", "external"], "internal", "type", "unknown"],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "next{,/**}",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "@/pages{,/**}",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@/components{,/**}(?!/*.module.css)",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@/components{,/**}/*.module.css",
            "group": "unknown",
            "position": "after"
          },
          {
            "pattern": "@/hooks{,/**}",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@/recoil{,/**}",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@/utility{,/**}",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@/options{,/**}",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@/i18n{,/**}",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@/type{,/**}",
            "group": "type",
            "position": "after"
          }
        ],
        "alphabetize": {
          "order": "asc"
        },
        "newlines-between": "never"
      }
    ]
  }
}
